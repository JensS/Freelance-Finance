APP_NAME="Freelance Finance Hub"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8080
APP_PORT=8080

APP_LOCALE=de
APP_FALLBACK_LOCALE=de
APP_FAKER_LOCALE=de_DE

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

# PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Authentication
APP_PASSWORD=password

DB_CONNECTION=pgsql
DB_HOST=pgsql
DB_PORT=5432
DB_DATABASE=freelance_finance
DB_USERNAME=sail
DB_PASSWORD=password

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database
# CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"

# Paperless Integration
PAPERLESS_URL=http://your-paperless-server:8000/
PAPERLESS_API_TOKEN=your_paperless_api_token_here
PAPERLESS_STORAGE_PATH="STORAGE_PATH_NAME"

# ============================================================================
# AI Provider Configuration (via Prism)
# ============================================================================
# Prism provides a unified interface for multiple AI providers
# Documentation: https://prismphp.com

# Ollama (Local AI - Recommended for self-hosted setups)
OLLAMA_URL=http://localhost:11434
# For Docker: use host.docker.internal:11434 or your Ollama server IP
# OLLAMA_URL=http://host.docker.internal:11434

# OpenAI
OPENAI_API_KEY=
OPENAI_URL=https://api.openai.com/v1
# Optional: OPENAI_ORGANIZATION=
# Optional: OPENAI_PROJECT=

# Anthropic (Claude)
ANTHROPIC_API_KEY=
ANTHROPIC_API_VERSION=2023-06-01
# Optional: ANTHROPIC_DEFAULT_THINKING_BUDGET=1024
# Optional: ANTHROPIC_BETA=

# OpenRouter (Unified gateway to 100+ AI models)
OPENROUTER_API_KEY=
OPENROUTER_URL=https://openrouter.ai/api/v1
# Optional: OPENROUTER_SITE_HTTP_REFERER=
# Optional: OPENROUTER_SITE_X_TITLE=

# Mistral AI
MISTRAL_API_KEY=
MISTRAL_URL=https://api.mistral.ai/v1

# Groq (Fast inference)
GROQ_API_KEY=
GROQ_URL=https://api.groq.com/openai/v1

# xAI (Grok)
XAI_API_KEY=
XAI_URL=https://api.x.ai/v1

# Google Gemini
GEMINI_API_KEY=
GEMINI_URL=https://generativelanguage.googleapis.com/v1beta/models

# DeepSeek
DEEPSEEK_API_KEY=
DEEPSEEK_URL=https://api.deepseek.com/v1

# ============================================================================
# Production Deployment Settings
# ============================================================================
# For Docker/Dokploy deployment, update these values:
# - Set APP_ENV=production
# - Generate APP_KEY: php artisan key:generate
# - Set APP_DEBUG=false
# - Update APP_URL to your production domain
# - Configure external PostgreSQL connection (DB_HOST, DB_PORT, etc.)
# - Set a strong APP_PASSWORD for authentication
